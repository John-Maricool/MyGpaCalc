<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.johnbatista.mygpacalc.ShowGP">

    <TextView
        android:id="@+id/tView"
        android:text="Your GPA is: "
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_below="@+id/tView"
        android:id="@+id/tV"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:onClick="save"
        android:id="@+id/save"
        android:layout_below="@+id/tV"
        android:layout_marginTop="30dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOTO GPA"
        android:onClick="gotoGp"
        android:id="@+id/gotoGP"
        android:layout_below="@+id/tV"
        android:layout_margin="30dp"
        android:layout_toRightOf="@+id/save" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVED GPs"
        android:onClick="list"
        android:layout_centerHorizontal="true"
        android:id="@+id/list"
        android:layout_below="@+id/gotoGP"
        android:layout_marginTop="30dp" />



</RelativeLayout>
