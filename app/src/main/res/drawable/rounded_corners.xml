<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="#E5EFEF"
                        android:endColor="#ADC3D1"
                        android:angle="270"/>
